Camera
{
    name "FreeCam"
    position [0.0 120.0 220.0]
    orientation [0.0 0.1 0.0] // yaw, pitch, roll
    znear 10.0
    zfar 50000.0
    fov 60.0
}


FreeRoamCameraController
{
    name "CamControl"
    TargetCameraName "FreeCam"
    Speed 100.0
}
